<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="车辆账号充值" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:stretchColumns="1">

        <TableRow>

            <TextView android:text="车牌号: " />

            <TextView android:id="@+id/carmanager_dialogtv_carId" />

        </TableRow>

        <TableRow>

            <TextView android:text="充值金额: " />

            <EditText
                android:id="@+id/carmanager_dialoget_money"
                android:hint="1-999" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/carmanager_dialogbtn_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值" />

        <Button
            android:id="@+id/carmanager_dialogbtn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>